@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic for Edit Reminder LOGIC_COLOR_T1
participant "editReminder:EditReminderCommand" as EditReminderCommand LOGIC_COLOR
participant "reminder:Reminder" as Reminder LOGIC_COLOR
participant "result:CommandResult" as CommandResult LOGIC_COLOR
end box

box Model for Model MODEL_COLOR_T1
participant "model:Model" as Model MODEL_COLOR
end box

[-> EditReminderCommand : execute(model)
activate EditReminderCommand

EditReminderCommand -> EditReminderCommand : getReminder()
activate EditReminderCommand

EditReminderCommand -> Model : getFilteredReminderList()
activate Model

Model --> EditReminderCommand
deactivate Model

EditReminderCommand -> EditReminderCommand : isModifiableReminder()
activate EditReminderCommand

EditReminderCommand --> EditReminderCommand
deactivate EditReminderCommand

EditReminderCommand --> EditReminderCommand : reminderToEdit
deactivate EditReminderCommand

EditReminderCommand -> EditReminderCommand : createEditedReminder
activate EditReminderCommand

create Reminder
EditReminderCommand -> Reminder
activate Reminder

Reminder --> EditReminderCommand
deactivate Reminder

EditReminderCommand --> EditReminderCommand : reminder
deactivate EditReminderCommand

EditReminderCommand -> Model : setReminder(reminder)
EditReminderCommand -> Model : updateFilteredReminderList(reminder)

create CommandResult
EditReminderCommand -> CommandResult
activate CommandResult

CommandResult --> EditReminderCommand
deactivate CommandResult

[<-- EditReminderCommand : result
deactivate EditReminderCommand
'Hidden arrow to position the destroy marker below the end of the activation bar.
[<-[hidden]- EditReminderCommand
destroy EditReminderCommand
@enduml
