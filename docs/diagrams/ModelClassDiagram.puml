@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyAddressBook" as ReadOnlyAddressBook
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class AddressBook
Class ModelManager
Class UserPrefs

Class UniquePersonList
Class UniqueReminderList
Class Person
Class Reminder
Class Name
Class Phone
Class LessonTime
Class PaymentStatus
Class Participation
Class DueDate
Class Description

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

AddressBook .up.|> ReadOnlyAddressBook

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyAddressBook
ModelManager -left-> "1" AddressBook
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

AddressBook *--> "1" UniquePersonList
UniquePersonList --> "~* all" Person
Person *--> "1" Name
Person *--> "1" Phone
Person *--> "1..*" LessonTime
Person *--> PaymentStatus
Person *--> Participation

AddressBook *--> "1" UniqueReminderList
UniqueReminderList --> "~* all" Reminder
Reminder *--> "1" DueDate
Reminder *--> "1" Description

Person -[hidden]left--> Reminder
Reminder -[hidden]up--> I
UniquePersonList -[hidden]left-> UniqueReminderList
UniqueReminderList -[hidden]right-> I

Name -[hidden]right-> Phone
Phone -[hidden]right-> LessonTime
LessonTime -[hidden]right-> PaymentStatus
PaymentStatus -[hidden]right-> Participation

DueDate -[hidden]right-> Description

ModelManager --> "~* filtered" Person
ModelManager --> "~* filtered" Reminder
@enduml
