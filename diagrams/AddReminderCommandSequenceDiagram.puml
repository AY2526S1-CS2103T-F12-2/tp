@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic for Add Reminder LOGIC_COLOR_T1
participant "addReminder:AddReminderCommand" as AddReminderCommand LOGIC_COLOR
participant "result:CommandResult" as CommandResult LOGIC_COLOR
end box

box Model for Model MODEL_COLOR_T1
participant "model:Model" as Model MODEL_COLOR
end box

[-> AddReminderCommand : execute(model)
activate AddReminderCommand

AddReminderCommand -> Model : addReminder(reminder)

create CommandResult
AddReminderCommand -> CommandResult
activate CommandResult

CommandResult --> AddReminderCommand
deactivate CommandResult

[<-- AddReminderCommand : result
deactivate AddReminderCommand
'Hidden arrow to position the destroy marker below the end of the activation bar.
[<-[hidden]- AddReminderCommand
destroy AddReminderCommand
@enduml
